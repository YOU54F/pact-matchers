{
  "consumer": {
    "name": "pactflow-example-consumer-java-junit"
  },
  "interactions": [
    {
      "description": "a request to get a product",
      "providerStates": [
        {
          "name": "a product with ID 10 exists"
        }
      ],
      "request": {
        "method": "GET",
        "path": "/product/10"
      },
      "response": {
        "body": {
          "id": "5cc989d0-d800-434c-b4bb-b1268499e850",
          "name": "product name",
          "type": "product series"
        },
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "matchingRules": {
          "body": {
            "$.id": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.name": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.type": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            }
          },
          "header": {
            "Content-Type": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/json(;\\s?charset=[\\w\\-]+)?"
                }
              ]
            }
          }
        },
        "status": 200
      }
    },
    {
      "description": "a request to get all products",
      "providerStates": [
        {
          "name": "a product with ID 10 exists"
        }
      ],
      "request": {
        "method": "GET",
        "path": "/products"
      },
      "response": {
        "body": [
          {
            "id": "5cc989d0-d800-434c-b4bb-b1268499e850",
            "name": "product name",
            "type": "product series"
          }
        ],
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "matchingRules": {
          "body": {
            "$": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$[*].id": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$[*].name": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$[*].type": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            }
          },
          "header": {
            "Content-Type": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/json(;\\s?charset=[\\w\\-]+)?"
                }
              ]
            }
          }
        },
        "status": 200
      }
    }
  ],
  "metadata": {
    "pact-jvm": {
      "version": "4.2.18"
    },
    "pactSpecification": {
      "version": "3.0.0"
    }
  },
  "provider": {
    "name": "pactflow-example-provider-springboot"
  }
}
